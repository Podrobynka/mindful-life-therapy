- provide :page_title, t('seo.title.settings.show')

.row.lpb
  .column.medium-centered.medium-8.large-6
    %h1.mmb Site Settings

    .callout.success.lmb
      %p
        %b Telephone:
        %br
        = @settings.telephone

      %p
        %b Contact email:
        %br
        = @settings.contact_email

      %p
        %b Office address line 1:
        %br
        = @settings.office_address_line_1

      - if @settings.office_address_line_2.present?
        %p
          %b Office address line 2:
          %br
          = @settings.office_address_line_2

      - if @settings.office_address_line_3.present?
        %p
          %b Office address line 3:
          %br
          = @settings.office_address_line_3

      %p
        %b Office address city:
        %br
        = @settings.office_address_city

      %p
        %b Office address postcode:
        %br
        = @settings.office_address_postcode

      %p
        %b Session rate:
        %br
        = @settings.session_rate

    %p.text-right
      = link_to 'Edit Site Settings', edit_settings_path, class: 'button large strong'
