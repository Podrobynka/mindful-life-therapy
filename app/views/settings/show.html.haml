.row.lpb
  .column.medium-centered.medium-8.large-6
    %h1.mmb Site Settings

    .callout.secondary
      %p
        %b Telephone:
        %br
        = @setting.telephone

      %p
        %b Contact email:
        %br
        = @setting.contact_email

      %p
        %b Office address:
        %br
        = @setting.office_address

      %p
        %b Hourly rate:
        %br
        = @setting.hourly_rate

    %p.text-right
      = link_to 'Edit Site Settings', edit_settings_path, class: 'button large strong'
