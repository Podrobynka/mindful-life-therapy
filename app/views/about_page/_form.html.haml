= form_for @about_page do |f|
  - if @about_page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@about_page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @about_page.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :meta_description
    = f.text_field :meta_description
  .actions
    = f.submit 'Save'
