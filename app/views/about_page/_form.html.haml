= form_with model: @about_page, url: about_page_path, class: 'lmb' do |f|
  %h1.text-center.lmb.lpb Edit the About Page

  %fieldset.fieldset.callout.lmb.npt

    = render 'form_errors', target: @about_page

    .field
      = f.label :page_photo, class: 'required strong', title: 'Page photo is required'
      %p.smb 10MB max size
      = f.file_field :page_photo, multiple: false, direct_upload: true

    .field
      = f.label :body, class: 'required strong', title: 'Body is required'
      %p.smb 100,000 characters max
      = f.text_field :body, type: 'hidden'
      %trix-editor{ input: 'about_page_body', placeholder: 'i.e. Mindful Life Therapy offers individual counselling and psychotherapy services in Glasgow and further afield.', class: 'smb trix-editor', tabindex: '1'}

    .actions.text-right= f.button t('settings.button_text').html_safe, class: 'button strong large dark-border-bottom', tabindex: '2', data: { disable_with: t('settings.disable_with_text').html_safe }
