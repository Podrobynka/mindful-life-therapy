%footer.footer.black-background
  .row.lpt.mpb.column
    %ul.no-bullet.nmb.text-center
      %li.inline-block.sma
        %span
          = fa_icon 'phone'
          %strong.medium-gray= @setting.telephone

      %li.inline-block.sma
        %span
          = fa_icon 'envelope'
          %strong.medium-gray
            = mail_to @setting.contact_email, @setting.contact_email, class: 'medium-gray-link'

      %li.inline-block.sma
        %span
          = fa_icon 'map-marker'
          %strong.medium-gray
            = @setting.office_address

  .row.lpt
    .column.large-5.large-offset-1.lmb
      %h2.strong.lead.white
        Do you need help with a sensitive issue?

      %p.nmb.medium-gray
        My aim is to support your exploration of sensitive issues, emotions and behaviours, and help clear a path towards happiness and wellbeing.

    .column.large-5.end.lmb
      %h2.strong.lead.white
        Do you want to learn mindfulness?

      %p.nmb.medium-gray
        I host regular mindfulness events, meditation retreats and stress reduction courses, where you can learn to ease the pressures of everyday life.

  .row.mpt.lpb.column.text-center
    = link_to 'Home', root_path, class: 'inline-block sma border-link'
    = link_to 'About', about_path, class: 'inline-block sma border-link'
    = link_to 'Counselling & Psychotherapy', counselling_path, class: 'inline-block sma border-link'
    = link_to 'Mindfulness', mindfulness_path, class: 'inline-block sma border-link'
    = link_to 'Contact', contact_path, class: 'inline-block sma border-link'
