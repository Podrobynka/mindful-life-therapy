%section.callout.primary-background.no-radius.mpa.nmb
  .row.column.smaller
    .flex.flex-space-between.npl-on-small.npl-on-medium.mpl-on-large.flex-row-on-large.flex-column-on-medium-down

      .flex-item.strong.smb-on-medium-down
        .table
          .table-row
            .table-cell= icon 'fas', 'spa', class: 'smr fixed-width-icon black'
            .table-cell.black Mindful Life Therapy provides Counselling, Psychotherapy & Mindfulness Training services in Glasgow and further afield

      .flex-item.strong
        .table
          .table-row
            .table-cell= icon 'fas', 'lock', class: 'smr fixed-width-icon black'
            .table-cell= link_to "Admin", admin_path, class: 'black-link hover-text-decoration'

%section.callout.no-radius.mpa.lmb
  .row.column.smaller
    .flex.flex-space-between.npl-on-small.npl-on-medium.mpl-on-large.flex-row-on-large.flex-column-on-medium-down

      .flex-item.strong.smb-on-medium-down
        .table
          .table-row
            .table-cell= icon 'fas', 'phone', class: 'smr fixed-width-icon black'
            .table-cell.black= "Call Zoe on #{@settings.telephone}"

      .flex-item.strong.smb-on-medium-down
        .table
          .table-row
            .table-cell= icon 'fas', 'envelope', class: 'smr fixed-width-icon black'
            .table-cell.light-gray= mail_to @settings.contact_email, @settings.contact_email, class: 'black-link hover-text-decoration'

      .flex-item.strong.smb-on-medium-down
        .table
          .table-row
            .table-cell= icon 'fas', 'map-marker-alt', class: 'smr fixed-width-icon black'
            .table-cell.strong= link_to footer_office_address(@settings), map_page_url, class: 'black-link hover-text-decoration'

      .flex-item.strong
        .table
          .table-row
            .table-cell= icon 'fas', 'map', class: 'smr fixed-width-icon black'
            .table-cell.strong= link_to 'Office Location Map', map_page_url, class: 'black-link hover-text-decoration'

%nav.flex.row.column.lpt.mpb.mpl.mpr.lmb
  %input#nav-checkbox.hide{ type: 'checkbox' }

  = link_to root_path do
    = image_tag 'logos/mindful-life-therapy-logo.png', class: 'block hover-opacity', title: t('colophon.image.caption'), alt: t('colophon.image.caption')

  %label.flex-1.font-1.hide-for-large.text-right.medium-gray-link{ for: 'nav-checkbox' }
    %span.hover-pointer.button.primary.icon-on-medium-down.button-border-bottom.button-text-shadow.nmb
      = icon 'fas', 'bars', class: 'white'

  %ul.primary-nav.flex-1-on-large.no-bullet.npa.nma.text-right{ role: 'menubar' }
    %li.inline-block-on-large.splr-on-large
      = link_to root_path, class: active_link?('home_page') do
        Home

    %li.inline-block-on-large.splr-on-large
      = link_to about_page_path, class: active_link?('about_page') do
        About

    %li.inline-block-on-large.splr-on-large
      = link_to counselling_page_path, class: active_link?('counselling_page') do
        Counselling & Psychotherapy

    %li.inline-block-on-large.splr-on-large
      = link_to mindfulness_page_path, class: active_link?('mindfulness_page') do
        Mindfulness Training

    %li.inline-block-on-large.sml-on-large
      = link_to contact_path, class: "#{button_css(color: 'primary')} smt-on-small nmt-on-large" do
        = icon 'fas', 'envelope', 'Contact', class: 'smr'
